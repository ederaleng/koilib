{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["ES6", "DOM"]
    //"module": "CommonJS",
    //"moduleResolution": "node",
    //"strict": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
